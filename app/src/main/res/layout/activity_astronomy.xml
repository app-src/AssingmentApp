<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.ashishthehulk.assignmentapp.AstronomyActivity">
  <TextView
      android:id="@+id/searched"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="56dp"
      android:text="You Searched for : "
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/showing"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="Showing results for :"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="@+id/searched"
      app:layout_constraintTop_toBottomOf="@+id/searched" />
  <TextView
      android:id="@+id/searchedCountry"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:text="Searched"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/searched"
      app:layout_constraintStart_toEndOf="@+id/searched"
      app:layout_constraintTop_toTopOf="@+id/searched"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/resultCountry"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Result"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/showing"
      app:layout_constraintStart_toStartOf="@+id/searchedCountry"
      app:layout_constraintTop_toTopOf="@+id/showing" />

  <TextView
      android:id="@+id/sunrise"
      android:layout_marginTop="84dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sunrise: "
      app:layout_constraintStart_toStartOf="@+id/showing"
      app:layout_constraintTop_toBottomOf="@+id/showing" />
  <TextView
      android:id="@+id/sunset"
      android:layout_width="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Sunset: "
      app:layout_constraintStart_toStartOf="@+id/showing"
      app:layout_constraintTop_toBottomOf="@id/sunrise"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/moonrise"
      android:layout_width="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Moonrise: "
      app:layout_constraintStart_toStartOf="@+id/showing"
      app:layout_constraintTop_toBottomOf="@id/sunset"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/moonset"
      android:layout_width="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Moonset: "
      app:layout_constraintStart_toStartOf="@+id/showing"
      app:layout_constraintTop_toBottomOf="@id/moonrise"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/moon_phase"
      android:layout_width="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Moon phase: "
      app:layout_constraintStart_toStartOf="@+id/showing"
      app:layout_constraintTop_toBottomOf="@id/moonset"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/moon_illumination"
      android:layout_width="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Moon illumination: "
      app:layout_constraintStart_toStartOf="@+id/showing"
      app:layout_constraintTop_toBottomOf="@id/moon_phase"
      android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>